<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".rectangleActivity" android:orientation="vertical" android:id="@+id/rectangleScreen">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/hside" android:layout_margin="12sp" android:hint="input a" android:gravity="center"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/wside" android:layout_margin="12sp" android:hint="input b" android:gravity="center"/>
    <Button
            android:text="@string/squareButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/getSButton" android:layout_margin="12sp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    <TextView
            android:text="@string/squareSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/areaResult" android:textSize="24sp"
            android:gravity="center" android:layout_margin="12sp"/>
    <Button
            android:text="@string/perimeterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/getPButton" android:layout_margin="12sp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    <TextView
            android:text="@string/perimeterSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/perimResult" android:textSize="24sp"
            android:gravity="center" android:layout_margin="12sp"/>
</LinearLayout>