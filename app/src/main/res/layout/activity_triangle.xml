<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TriangleActivity" android:orientation="vertical" android:id="@+id/triangleScreen">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/aSide" android:layout_margin="12sp" android:gravity="center" android:hint="input a"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/bSide" android:layout_margin="12sp" android:gravity="center" android:hint="input b"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/cSide" android:layout_margin="12sp" android:gravity="center" android:hint="input c"/>
    <Button
            android:text="@string/squareButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/getSButton" android:layout_margin="12sp"
            android:gravity="center" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    <TextView
            android:text="@string/squareSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/areaResult" android:layout_margin="12sp"
            android:gravity="center" android:textSize="24sp"/>
    <Button
            android:text="@string/perimeterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/getPButton" android:layout_margin="12sp"
            android:gravity="center" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    <TextView
            android:text="@string/perimeterSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/perimResult" android:layout_margin="12sp"
            android:gravity="center" android:textSize="24sp"/>
</LinearLayout>